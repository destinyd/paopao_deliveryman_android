<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/ActionBar">
    <com.realityandapp.paopao_official_deliveryman.widget.FontAwesomeButton
            style="@style/ActionBarFATV"
            android:id="@+id/fatv_menu"
            android:background="@drawable/actionbar_icon"
            android:text="@string/fa_menu"
            android:layout_alignParentLeft="true"
            />
    <LinearLayout android:layout_width="50dp" android:layout_height="50dp"
                  android:id="@+id/fa_btn_messages"
                  android:layout_alignParentRight="true"
            >
        <com.realityandapp.paopao_official_deliveryman.widget.FontAwesomeButton
                style="@style/ActionBarFATV"
                android:id="@+id/fabtn_messages"
                android:background="@drawable/actionbar_icon"
                android:text="@string/fa_comment"
                />
    </LinearLayout>

    <LinearLayout android:layout_width="50dp" android:layout_height="50dp"
                  android:id="@+id/ll_shops"
                  android:layout_alignParentRight="true"
                  android:visibility="gone"
            >
        <com.realityandapp.paopao_official_deliveryman.widget.FontAwesomeButton
                style="@style/ActionBarFATV"
                android:id="@+id/fabtn_shops"
                android:background="@drawable/actionbar_icon"
                android:text="@string/fa_cart"
                />
    </LinearLayout>

